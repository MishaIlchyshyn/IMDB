<%= form_with url: movies_path, local: true, method: :get do |f| %>
  <div class="col-span-6 sm:col-span-6">
    <%= f.label t('home.filter_form.category'), class: "block text-sm font-medium text-gray-700" %>
    <%= f.select :search, Movie.categories.keys.map { |w| [w.humanize, w] }, {}, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
  </div>

  <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
    <%= f.submit t('home.filter_form.save'), class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>