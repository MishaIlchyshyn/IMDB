<div class="album py-5 bg-light h-100">
  <div class="container">
    <div class="text-center">
      <h3 class="text-4xl mb-16 font-medium leading-6 text-gray-900"><%= t('home.list_movies') %></h3>
    </div>
    <%= render 'movies/filter_form' %>
    <div class="row">
      <% if @movies.any? %>
        <% @movies.each do |movie| %>
          <%= render 'movies/movie_card', movie: movie %>
        <% end %>
      <% else %>
        <h3 class="text-2xl m-16 font-medium leading-6 text-gray-900"><%= t('home.no_movies') %></h3>
      <% end %>
    </div>
    <div class="flex justify-end mt-6">
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>