<div class="col-lg-4 col-md-6">
  <div class="card mb-4 shadow-sm">
    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
    <div class="card-body h-96 p-0">
      <h3 class="text-2xl text-gray-600 my-6 px-4"><%= movie.slug %></h3>
      <p class="card-text px-4"><%= movie.text.truncate(230) %></p>
      <div class="px-4 w-full absolute bottom-0">
        <span class="px-2 mt-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
          <%= movie.category %>
        </span>
        <div class="d-flex my-6 justify-content-between align-items-center">
          <div class="btn-group">
            <%= link_to movie_path(movie) do %>
              <button type="button" class="btn btn-sm btn-outline-secondary"><%= t('home.view') %></button>
            <% end %>
          </div>
          <small class="text-muted">*****</small>
        </div>
      </div>
    </div>
  </div>
</div>