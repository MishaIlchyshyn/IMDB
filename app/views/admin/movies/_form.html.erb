<%= render 'shared/errors', obj: movie %>

<%= form_with model: movie, local: true, url: url, method: method do |f| %>
  <div class="shadow overflow-hidden sm:rounded-md">
    <div class="px-4 py-5 bg-white sm:p-6">
      <div class="grid grid-cols-6 gap-6">
        <div class="col-span-6 sm:col-span-6">
          <%= f.label t('admin.movie_form.title'), class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :title, placeholder: t('admin.movie_form.title'), required: true, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        </div>
        <div class="col-span-6 sm:col-span-6">
          <%= f.label t('admin.movie_form.text'), class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :text, placeholder: t('admin.movie_form.text'), rows: "15", required: true, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        </div>
        <div class="col-span-6 sm:col-span-6">
          <%= f.label t('admin.movie_form.category'), class: "block text-sm font-medium text-gray-700" %>
          <%= f.select :category, Movie.categories.keys.map { |w| [w.humanize, w] }, {}, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
        </div>
      </div>
    </div>
    <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
      <%= f.submit t('admin.movie_form.save'), class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
<% end %>